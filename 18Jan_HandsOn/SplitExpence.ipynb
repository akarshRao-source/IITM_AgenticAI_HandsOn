    names = "Anita"
    result = split_expense(total, names)
    result = format_as_table(result, currency="₹")
    print(result)
except TypeError as e:
    print(f"✅ TypeError caught: {e}\n")
except ValueError as e:
    print(f"✅ ValueError caught: {e}\n")

